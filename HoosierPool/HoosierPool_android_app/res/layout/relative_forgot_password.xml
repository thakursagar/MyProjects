<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.b649.hoosierpool.ForgotPassword$PlaceholderFragment" >

    <TextView
        android:id="@+id/tvFPSecurityQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Security Question"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/etFPAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFPSecurityQuestion"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Answer" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnFPOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etFPAnswer"
        android:layout_below="@+id/etFPAnswer"
        android:layout_marginTop="34dp"
        android:onClick="ok"
        android:text="OK" />

    <Button
        android:id="@+id/btnFPCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnFPOK"
        android:layout_alignBottom="@+id/btnFPOK"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:onClick="cancel"
        android:text="Cancel" />

    <EditText
        android:id="@+id/etFPPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnFPOK"
        android:layout_centerVertical="true"
        android:ems="10"
        android:enabled="false"
        android:hint="New Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnFPDiscard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnFPUpdate"
        android:layout_alignRight="@+id/btnFPCancel"
        android:enabled="false"
        android:onClick="discard"
        android:text="Discard" />

    <Button
        android:id="@+id/btnFPUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etFPPassword"
        android:layout_below="@+id/etFPPasswordAgain"
        android:layout_marginTop="35dp"
        android:enabled="false"
        android:onClick="update"
        android:text="Update" />

    <EditText
        android:id="@+id/etFPPasswordAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etFPPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:enabled="false"
        android:hint="New Password Again"
        android:inputType="textPassword" />

</RelativeLayout>
