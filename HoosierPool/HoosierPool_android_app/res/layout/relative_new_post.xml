<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.b649.hoosierpool.NewPost$PlaceholderFragment" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/etNPSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:ems="10" 
                android:hint="Source"
                >

                <requestFocus />
            </EditText>

            
        <EditText
        android:id="@+id/etNPDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Destination" />
          <EditText
        android:id="@+id/etNPPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:ems="10" 
        android:hint="Price"
        />
        <EditText
        android:id="@+id/etNPMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Mobile" 
        />
        <EditText
                android:id="@+id/etNPDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="Date"
                />

        

	<EditText
                android:id="@+id/etNPTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time" 
                android:hint="Time"
                />
        <EditText
        android:id="@+id/etNPTotalMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:ems="10" 
         android:hint="Total Members"
        />
        <EditText
        android:id="@+id/etNPPickUpLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:ems="10" 
        android:hint="Pick-Up Location"
        />
        <Button
            android:id="@+id/btnNPPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post" 
            android:onClick="post"
            />

        <Button
            android:id="@+id/btnNPCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" 
            android:onClick="cancel"
            />
        
        </LinearLayout>
    </ScrollView>

    


</RelativeLayout>
